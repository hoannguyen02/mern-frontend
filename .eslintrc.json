{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "arrow-parens": 0,
    "comma-dangle": ["error", "never"],
    "object-curly-newline": [
      "error",
      {
        "ObjectPattern": { "multiline": true },
        "ExportDeclaration": { "multiline": true, "minProperties": 3 }
      }
    ]
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended",
    "airbnb",
    "airbnb/hooks"
  ]
}
